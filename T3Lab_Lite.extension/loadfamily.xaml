<Window x:Class="RevitFamilyLoader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Load Autodesk Family" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Thanh tìm kiếm -->
        <TextBox Grid.Row="0" Margin="10" Height="30" PlaceholderText="Search content names and paths..." />

        <DockPanel Grid.Row="1">
            <!-- Danh mục bên trái -->
            <TreeView Width="200" Margin="10">
                <TreeViewItem Header="All Results"/>
                <TreeViewItem Header="Casework">
                    <TreeViewItem Header="Base Cabinets"/>
                    <TreeViewItem Header="Counter Tops"/>
                    <TreeViewItem Header="Shelving"/>
                    <TreeViewItem Header="Tall Cabinets"/>
                    <TreeViewItem Header="Wall Cabinets"/>
                </TreeViewItem>
            </TreeView>

            <!-- Danh sách nội dung tải -->
            <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                <WrapPanel>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="5" Width="120" Height="150">
                        <StackPanel>
                            <Image Source="icon.png" Height="80"/>
                            <TextBlock Text="Base Cabinet - 2 Bin" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="5" Width="120" Height="150">
                        <StackPanel>
                            <Image Source="icon.png" Height="80"/>
                            <TextBlock Text="Base Cabinet - 3 Drawers" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <!-- Thêm nhiều mục khác -->
                </WrapPanel>
            </ScrollViewer>
        </DockPanel>

        <!-- Nút Load và Cancel -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Load" Width="80" Margin="5"/>
            <Button Content="Cancel" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
