<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Load Autodesk Family"
        Height="700" Width="1000"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Styles -->
        <Style TargetType="Button" x:Key="FolderButtonStyle">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Folder Selection Bar -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="10" BorderBrush="#D0D0D0" BorderThickness="0,0,0,1">
            <DockPanel>
                <Button x:Name="btn_select_folder"
                        Content="Select Folder..."
                        DockPanel.Dock="Left"
                        Style="{StaticResource FolderButtonStyle}"
                        Click="select_folder_clicked"/>
                <TextBlock x:Name="txt_current_folder"
                           Text="No folder selected"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"
                           FontStyle="Italic"
                           Foreground="#666666"/>
            </DockPanel>
        </Border>

        <!-- Search Bar -->
        <Border Grid.Row="1" Padding="10" BorderBrush="#D0D0D0" BorderThickness="0,0,0,1">
            <DockPanel>
                <TextBlock Text="ðŸ”"
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Margin="5,0,10,0"/>
                <TextBox x:Name="txt_search"
                         Height="32"
                         VerticalContentAlignment="Center"
                         TextChanged="search_text_changed">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Padding" Value="8,5"/>
                            <Setter Property="BorderBrush" Value="#D0D0D0"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </DockPanel>
        </Border>

        <DockPanel Grid.Row="2">
            <!-- Category Tree on Left -->
            <Border DockPanel.Dock="Left"
                    Width="250"
                    BorderBrush="#D0D0D0"
                    BorderThickness="0,0,1,0"
                    Background="#FAFAFA">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Categories"
                               FontWeight="Bold"
                               FontSize="14"
                               Padding="10"
                               Background="#E8E8E8"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TreeView x:Name="tree_categories"
                                  Padding="5"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  SelectedItemChanged="category_selected">
                        </TreeView>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Family Grid on Right -->
            <DockPanel>
                <Border DockPanel.Dock="Top"
                        Background="#E8E8E8"
                        Padding="10"
                        BorderBrush="#D0D0D0"
                        BorderThickness="0,0,0,1">
                    <DockPanel>
                        <TextBlock x:Name="txt_result_count"
                                   Text="0 families found"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    DockPanel.Dock="Right">
                            <Button Content="Select All"
                                    Margin="5,0"
                                    Padding="8,4"
                                    Click="select_all_clicked"/>
                            <Button Content="Select None"
                                    Padding="8,4"
                                    Click="select_none_clicked"/>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto"
                              Padding="10">
                    <ItemsControl x:Name="items_families">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#D0D0D0"
                                        BorderThickness="1"
                                        Padding="8"
                                        Margin="5"
                                        Width="140"
                                        Height="180"
                                        Background="White">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#0078D4"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <CheckBox x:Name="chk_family"
                                                  IsChecked="{Binding IsChecked}"
                                                  HorizontalAlignment="Left"
                                                  Margin="0,0,0,5"/>
                                        <Image Source="{Binding Thumbnail}"
                                               Height="90"
                                               Stretch="Uniform"
                                               Margin="0,5"/>
                                        <TextBlock Text="{Binding Name}"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="11"
                                                   Height="40"
                                                   ToolTip="{Binding FullPath}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </DockPanel>

        <!-- Action Buttons at Bottom -->
        <Border Grid.Row="3"
                Background="#F0F0F0"
                Padding="15"
                BorderBrush="#D0D0D0"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="txt_selected_count"
                           Text="0 families selected"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"
                           FontWeight="SemiBold"/>
                <Button x:Name="btn_load"
                        Content="Load"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#0078D4"
                        Foreground="White"
                        Margin="5,0"
                        Click="load_clicked"
                        IsEnabled="False"/>
                <Button Content="Cancel"
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="5,0"
                        Click="cancel_clicked"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
