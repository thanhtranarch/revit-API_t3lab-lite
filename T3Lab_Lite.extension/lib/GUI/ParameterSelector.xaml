<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid.Resources>
        <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

            <!-- Colors -->
            <SolidColorBrush x:Key="bg_light" Color="#FAFAFA"/>
            <SolidColorBrush x:Key="bg_white" Color="White"/>
            <SolidColorBrush x:Key="border_gray" Color="#D0D0D0"/>
            <SolidColorBrush x:Key="text_dark" Color="#333333"/>
            <SolidColorBrush x:Key="text_gray" Color="#666666"/>
            <SolidColorBrush x:Key="accent_blue" Color="#3498DB"/>
            <SolidColorBrush x:Key="button_bg" Color="#F0F0F0"/>
            <SolidColorBrush x:Key="button_hover" Color="#E0E0E0"/>

            <!-- Button Style -->
            <Style TargetType="Button">
                <Setter Property="Background" Value="{StaticResource button_bg}"/>
                <Setter Property="Foreground" Value="{StaticResource text_dark}"/>
                <Setter Property="BorderBrush" Value="{StaticResource border_gray}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource button_hover}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- TextBlock Style -->
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource text_dark}"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>

            <!-- TextBox Style -->
            <Style TargetType="TextBox">
                <Setter Property="Background" Value="{StaticResource bg_white}"/>
                <Setter Property="Foreground" Value="{StaticResource text_dark}"/>
                <Setter Property="BorderBrush" Value="{StaticResource border_gray}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="4,2"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <!-- CheckBox Style -->
            <Style TargetType="CheckBox">
                <Setter Property="Foreground" Value="{StaticResource text_dark}"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <!-- ListBox Style -->
            <Style TargetType="ListBox">
                <Setter Property="Background" Value="{StaticResource bg_white}"/>
                <Setter Property="BorderBrush" Value="{StaticResource border_gray}"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

        </ResourceDictionary>
    </Grid.Resources>

    <Grid.Background>
        <SolidColorBrush Color="#FAFAFA"/>
    </Grid.Background>

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Title Bar -->
    <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#D0D0D0" BorderThickness="0,0,0,1" Padding="10,8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="main_title" Text="Edit Filename Pattern"
                       FontSize="14" FontWeight="SemiBold"
                       Foreground="#333333" VerticalAlignment="Center"/>
            <Button x:Name="button_close" Grid.Column="1" Content="X"
                    Width="24" Height="24" FontSize="11"
                    ToolTip="Close"/>
        </Grid>
    </Border>

    <!-- Main Content -->
    <Grid Grid.Row="1" Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column: Available Parameters -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Available Parameters" FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <!-- Include Project Info Checkbox -->
            <CheckBox x:Name="chk_include_project_params" Grid.Row="1"
                      Content="Include Project Information Parameters"
                      IsChecked="False" Margin="0,0,0,8"/>

            <!-- Available Parameters List -->
            <ListBox x:Name="list_available" Grid.Row="2"
                     SelectionMode="Extended"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}" Margin="2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Custom Field -->
            <Grid Grid.Row="3" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Custom Field"
                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="txt_custom_field" Grid.Column="1" Height="26"/>
                <Button x:Name="button_add_custom_field" Grid.Column="2"
                        Content="+" Width="26" Height="26" Margin="5,0,0,0"
                        ToolTip="Add custom field to selected parameters"/>
            </Grid>

            <!-- Custom Separator -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Custom Separator"
                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="txt_custom_separator" Grid.Column="1" Height="26"/>
                <Button x:Name="button_add_custom_separator" Grid.Column="2"
                        Content="+" Width="26" Height="26" Margin="5,0,0,0"
                        ToolTip="Add custom separator to selected parameters"/>
            </Grid>
        </Grid>

        <!-- Middle: Transfer Buttons -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="button_add_parameter" Content="&#x25B6;"
                    Width="36" Height="30" Margin="0,5" FontSize="14"
                    ToolTip="Add selected parameters"/>
            <Button x:Name="button_remove_parameter" Content="&#x25C0;"
                    Width="36" Height="30" Margin="0,5" FontSize="14"
                    ToolTip="Remove selected parameters"/>
        </StackPanel>

        <!-- Right Column: Selected Parameters -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Selected Parameters" FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <!-- Field Separator -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                <CheckBox x:Name="chk_field_separator" Content="Field Separator"
                          IsChecked="True" VerticalAlignment="Center"/>
                <TextBox x:Name="txt_field_separator" Text="-"
                         Width="40" Height="24" Margin="10,0,0,0"
                         HorizontalContentAlignment="Center"/>
            </StackPanel>

            <!-- Selected Parameters List -->
            <ListBox x:Name="list_selected" Grid.Row="2"
                     SelectionMode="Extended"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}" Margin="2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Arrangement Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="button_move_top" Content="&#x23CF;"
                        Width="30" Height="28" Margin="2,0" FontSize="12"
                        ToolTip="Move to top"/>
                <Button x:Name="button_move_up" Content="&#x25B2;"
                        Width="30" Height="28" Margin="2,0" FontSize="10"
                        ToolTip="Move up"/>
                <Button x:Name="button_move_down" Content="&#x25BC;"
                        Width="30" Height="28" Margin="2,0" FontSize="10"
                        ToolTip="Move down"/>
                <Button x:Name="button_move_bottom" Content="&#x2B07;"
                        Width="30" Height="28" Margin="2,0" FontSize="12"
                        ToolTip="Move to bottom"/>
                <Button x:Name="button_refresh" Content="&#x21BB;"
                        Width="30" Height="28" Margin="2,0" FontSize="14"
                        ToolTip="Refresh parameters"/>
            </StackPanel>
        </Grid>
    </Grid>

    <!-- Bottom: Action Buttons -->
    <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0" Padding="15,10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Preview Text -->
            <TextBlock x:Name="txt_preview" Grid.Column="0"
                       Text="Preview: (select parameters)"
                       VerticalAlignment="Center"
                       Foreground="#666666" FontStyle="Italic"/>

            <!-- Ok Button -->
            <Button x:Name="button_ok" Grid.Column="1" Content="Ok"
                    Width="80" Height="30" FontWeight="SemiBold"
                    Background="#3498DB" Foreground="White" BorderThickness="0"/>
        </Grid>
    </Border>
</Grid>
