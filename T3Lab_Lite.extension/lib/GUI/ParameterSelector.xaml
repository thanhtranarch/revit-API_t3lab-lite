<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Custom Filename Parameters"
    Height="700" Width="800"
    MinWidth="800"
    MinHeight="700"
    WindowStartupLocation="CenterScreen"
    HorizontalAlignment="Center"
    ShowInTaskbar="True"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="#080326">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/WPF_styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#33FC467B" Offset="0" />
                <GradientStop Color="#333F5EFB" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <!--HEADER START-->
        <Grid Background="{StaticResource header_background}"
              Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <!--LOGO-->
            <DockPanel Grid.Column="0" Grid.ColumnSpan="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left">
                <Image Width="20" Height="20" Margin="5,0,5,0"
                       Source="Resources/T3Lab_logo.png" />
                <TextBlock Margin="0,0,0,0">
                    <Hyperlink RequestNavigate="Hyperlink_RequestNavigate"
                               NavigateUri="https://www.t3lab.vn"
                               FontSize="14px"
                               FontWeight="Heavy"
                               Foreground="{StaticResource text_white}">
                        T3Lab
                    </Hyperlink>
                </TextBlock>
            </DockPanel>

            <!--TITLE-->
            <TextBlock x:Name="main_title"
                       Text="Custom Filename Parameters"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource text_white}"/>

            <!--CLOSE-->
            <Button Content="Close"
                    Grid.Column="2"
                    Width="60" Height="20"
                    FontSize="10"
                    Click="button_close"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"/>
        </Grid>
        <!--HEADER END-->

        <!--MAIN CONTENT-->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!--FIELD SEPARATOR SECTION-->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                <CheckBox x:Name="chk_field_separator"
                          Content="Field Separator"
                          IsChecked="True"
                          VerticalAlignment="Center"
                          Foreground="{StaticResource text_white}"
                          Margin="5"/>
                <TextBox x:Name="txt_field_separator"
                         Text="-"
                         Width="50"
                         Height="25"
                         VerticalAlignment="Center"
                         Margin="5"
                         Background="{StaticResource header_background}"
                         Foreground="{StaticResource text_white}"
                         BorderBrush="{StaticResource border_magenta}"/>
            </StackPanel>

            <!--PARAMETERS SECTION-->
            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--AVAILABLE PARAMETERS-->
                <GroupBox Grid.Column="0" Header="Available Parameters"
                          Foreground="{StaticResource text_white}"
                          BorderBrush="{StaticResource border_magenta}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--PROJECT INFO CHECKBOX-->
                        <CheckBox x:Name="chk_include_project_params"
                                  Grid.Row="0"
                                  Content="Include Project Information Parameters"
                                  IsChecked="True"
                                  Margin="5"
                                  Foreground="{StaticResource text_white}"
                                  Checked="toggle_project_params"
                                  Unchecked="toggle_project_params"/>

                        <!--AVAILABLE LIST-->
                        <ListBox x:Name="list_available"
                                 Grid.Row="1"
                                 Margin="5"
                                 Background="{StaticResource header_background}"
                                 Foreground="{StaticResource text_white}"
                                 BorderBrush="{StaticResource border_magenta}"
                                 SelectionMode="Extended"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}"
                                               Foreground="{StaticResource text_white}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </GroupBox>

                <!--BUTTONS-->
                <StackPanel Grid.Column="1" VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <Button Content="▶ Add >"
                            Width="70" Height="40"
                            Margin="5"
                            Click="button_add_parameter"
                            ToolTip="Add selected parameters"/>
                    <Button Content="◀ < Remove"
                            Width="85" Height="40"
                            Margin="5"
                            Click="button_remove_parameter"
                            ToolTip="Remove selected parameters"/>
                </StackPanel>

                <!--SELECTED PARAMETERS-->
                <GroupBox Grid.Column="2" Header="Selected Parameters"
                          Foreground="{StaticResource text_white}"
                          BorderBrush="{StaticResource border_magenta}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!--SELECTED LIST-->
                        <ListBox x:Name="list_selected"
                                 Grid.Row="0"
                                 Margin="5"
                                 Background="{StaticResource header_background}"
                                 Foreground="{StaticResource text_white}"
                                 BorderBrush="{StaticResource border_magenta}"
                                 SelectionMode="Extended"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}"
                                               Foreground="{StaticResource text_white}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!--ARRANGEMENT BUTTONS-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal"
                                    HorizontalAlignment="Center" Margin="5">
                            <Button Content="▲ Move Up" Width="90" Height="30"
                                    Margin="2" Click="button_move_up"
                                    ToolTip="Move up"/>
                            <Button Content="▼ Move Down" Width="100" Height="30"
                                    Margin="2" Click="button_move_down"
                                    ToolTip="Move down"/>
                            <Button Content="↻ Refresh" Width="80" Height="30"
                                    Margin="2" Click="button_refresh"
                                    ToolTip="Refresh parameters"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>

            <!--CUSTOM FIELD AND SEPARATOR-->
            <Grid Grid.Row="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--CUSTOM FIELD-->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <Label Content="Custom Field:"
                           Width="120"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource text_white}"/>
                    <TextBox x:Name="txt_custom_field"
                             Width="200"
                             Height="25"
                             VerticalAlignment="Center"
                             Margin="5"
                             Background="{StaticResource header_background}"
                             Foreground="{StaticResource text_white}"
                             BorderBrush="{StaticResource border_magenta}"/>
                    <Button Content="+"
                            Width="40" Height="25"
                            Margin="5"
                            Click="button_add_custom_field"
                            ToolTip="Add custom field to selected parameters"/>
                </StackPanel>

                <!--CUSTOM SEPARATOR-->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                    <Label Content="Custom Separator:"
                           Width="120"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource text_white}"/>
                    <TextBox x:Name="txt_custom_separator"
                             Width="200"
                             Height="25"
                             VerticalAlignment="Center"
                             Margin="5"
                             Background="{StaticResource header_background}"
                             Foreground="{StaticResource text_white}"
                             BorderBrush="{StaticResource border_magenta}"/>
                    <Button Content="+"
                            Width="40" Height="25"
                            Margin="5"
                            Click="button_add_custom_separator"
                            ToolTip="Add custom separator to selected parameters"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!--ACTION BUTTONS-->
        <Grid Grid.Row="2" Margin="10,5">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Content="OK"
                        Width="100" Height="35"
                        Margin="5"
                        Click="button_ok"
                        FontWeight="Bold"/>
                <Button Content="Cancel"
                        Width="100" Height="35"
                        Margin="5"
                        Click="button_cancel"/>
                <Button Content="Preview"
                        Width="100" Height="35"
                        Margin="5"
                        Click="button_preview"
                        ToolTip="Preview filename with current parameters"/>
            </StackPanel>
        </Grid>

        <!--FOOTER START-->
        <Grid Grid.Row="3" Background="{StaticResource header_background}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--IMAGE-->
            <TextBlock>
                <Hyperlink NavigateUri="https://www.t3lab.vn"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    <Image Height="20" Margin="1"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Source="Resources/T3Lab_logo.png" />
                </Hyperlink>
            </TextBlock>

            <!--VERSION-->
            <TextBlock x:Name="footer_version"
                       Text="Version: 1.0"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource text_gray}"/>

            <!--Support-->
            <TextBlock Grid.Column="2"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="0,0,10,0">
                <Hyperlink RequestNavigate="Hyperlink_RequestNavigate"
                           NavigateUri="https://www.t3lab.vn"
                           FontWeight="Medium"
                           Foreground="{StaticResource button_bg_hover}">
                    T3Lab
                </Hyperlink>
            </TextBlock>
        </Grid>
        <!--FOOTER END-->
    </Grid>
</Window>
